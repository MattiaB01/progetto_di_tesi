    <body style="background-color: cadetblue;">
      <div class="jumbotron jumbotron-fluid" style="margin-top: 10px; padding-top: 1%; padding-bottom: 1%;">
      <div class="container">
        <h1 class="display-6">Elenco pazienti contenuti in archivio</h1>
        <p class="lead"> Scegli il paziente da visualizzare
        </p>
      </div>
      </div>
        <div class="jumbotron jumbotron-fluid" style="background-color: cadetblue; margin-top:-10px;">
         
            <div class="container" style="margin-top: -70px;">
            
              
                <form action="/visualizza" method="POST" id="modulo" name="modulo">
                  <div class="row"> 
                    <div class="col-auto my-1">
                      <button type="submit" id="bottone" class="btn btn-primary">Visualizza</button>
                     </div>
                  <div class="col-auto my-1">
                    <select name="scelta" id="scelta" class="form-select" aria-label="Default select example" >
                     
                    </div>
                   
                    
                    <% let a=0;%>
                    <%    for (a=0;a<risultati.length;a++) { %>
                    <option value="<%=risultati[a].paziente%>"><%=risultati[a].paziente%></option>
                    
                    <% }; %>
                   
                  </select>
                
                 
                  </div>
                
              
              
             
              <p class="lead">Possono essere presenti fino ad un massimo 5 pazienti</p>
              <div class="col-auto my-1">
              <a href="/regPaziente" class="btn btn-secondary "  aria-disabled="false" style="margin:5px">Registra un paziente</a>
              </div>
              <% let i=0 %>
              <% for (i=0; i<risultati.length; i++) { %>
              <div class="col-auto my-1">
              <textarea readonly class="form-control" id="exampleFormControlTextarea1" rows="10" cols="100" style="resize: none;"> 
              
             Selezione: <%=risultati[i].paziente%> 
             Nome: <%=risultati[i].nome%>   Cognome:  <%=risultati[0].cognome%>
             Cod.Fis. : <%=risultati[i].cf%>
             Indirizzo : <%=risultati[i].indirizzo%>   Citt√†: <%=risultati[i].citta%>  Telefono: <%=risultati[i].tel%>
             Malattie pregresse:  <%=risultati[i].malattie%>
             Altro:  <%=risultati[i].altro%>
              </textarea>
              </div>
              <div class="col-auto my-1">
                              <button type="submit "  onclick="document.modulo.action='/elimina'" class="btn btn-danger" name="btn1" value="<%=risultati[i].paziente%>"> Elimina <%=risultati[i].paziente%></button>
                              <div>
                                <br>
                              <button type="submit "  onclick="document.modulo.action='/cancella'" class="btn btn-danger" name="btn1" value="<%=risultati[i].paziente%>"> Elimina grafici</button>
                              </div>
              
                            </div>
              
              <%}%>
              
                   </div>
                 
          </div>
        </form>
